# ============================================
# Heavenly Drops AI Manager - Environment Configuration
# ============================================

# Application
NODE_ENV=development
PORT=3000
APP_URL=https://heavenlydrops.access.ly
FRONTEND_URL=https://heavenlydrops.access.ly

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=heavenlydrops
DB_PASSWORD=your_secure_password
DB_NAME=heavenlydrops_db
DB_SSL=false

# Redis (for BullMQ queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Initial Admin Setup (only used on first run to create super admin)
INITIAL_ADMIN_PASSWORD=Change_This_Immediately_On_First_Login!

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Twilio (Voice Calls)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
FALLBACK_PHONE_NUMBER=+901234567890

# SMTP (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Heavenly Drops <info@heavenlydrops.com>
TEAM_EMAIL=team@heavenlydrops.com

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_APP_SECRET=your-app-secret

# Instagram API
INSTAGRAM_PAGE_ACCESS_TOKEN=your-page-access-token
INSTAGRAM_PAGE_ID=your-page-id
INSTAGRAM_VERIFY_TOKEN=your-webhook-verify-token
INSTAGRAM_APP_SECRET=your-app-secret

# Microsoft Teams / Graph API
MS_TENANT_ID=your-tenant-id
MS_CLIENT_ID=your-client-id
MS_CLIENT_SECRET=your-client-secret
MS_REDIRECT_URI=https://heavenlydrops.access.ly/api/auth/microsoft/callback

# Security
API_RATE_LIMIT=100
CORS_ORIGIN=https://heavenlydrops.access.ly

# ─── Email Inbox Polling ───────────────────────────────────────────────────
# Mode: "imap" (any provider) or "gmail" (Google OAuth2)
EMAIL_POLL_MODE=imap

# IMAP settings (used when EMAIL_POLL_MODE=imap)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-app-password
IMAP_TLS=true

# Gmail API settings (used when EMAIL_POLL_MODE=gmail)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_USER=your-email@gmail.com

# ─── Self-hosted Mail Server (Postfix / Dovecot / Roundcube) ──────────────────
MAIL_HOST=mail.workandstudyabroad.com.tr
ROUNDCUBE_INTERNAL_URL=http://127.0.0.1:8080
ROUNDCUBE_DES_KEY=change-this-32-char-secret-key!!

# Override SMTP to use own Postfix server
SMTP_HOST=mail.workandstudyabroad.com.tr
SMTP_PORT=587
SMTP_USER=info@workandstudyabroad.com.tr
SMTP_PASS=your-mail-account-password
EMAIL_FROM=Heavenly Drops <info@workandstudyabroad.com.tr>

# Override IMAP to use own Dovecot server
IMAP_HOST=mail.workandstudyabroad.com.tr
IMAP_PORT=993
IMAP_USER=info@workandstudyabroad.com.tr
IMAP_PASS=your-mail-account-password
IMAP_TLS=true
EMAIL_POLL_MODE=imap

# Attachment storage
ATTACHMENT_STORAGE_DIR=/app/attachments

# Admin JWT (used by auto-updater script)
ADMIN_JWT=your-admin-jwt-token
